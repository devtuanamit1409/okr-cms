{
  "kind": "collectionType",
  "collectionName": "tasks",
  "info": {
    "singularName": "task",
    "pluralName": "tasks",
    "displayName": "Task",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-tags": {
      "fieldName": "Tags",
      "tags": {
        "None": {
          "color": "neutral"
        },
        "Done": {
          "color": "success"
        },
        "In progress": {
          "color": "primary"
        },
        "Pendding": {
          "color": "danger"
        }
      },
      "defaultTag": "None"
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "Tags": {
      "type": "customField",
      "customField": "plugin::content-tags.content-tags"
    },
    "repeat": {
      "type": "boolean",
      "default": false
    },
    "progess": {
      "type": "integer",
      "max": 100
    },
    "completion_time": {
      "type": "datetime"
    },
    "idUser": {
      "type": "integer"
    },
    "isImportant": {
      "type": "boolean",
      "default": false
    },
    "deadline": {
      "type": "datetime"
    },
    "hours": {
      "type": "decimal"
    },
    "startAt": {
      "type": "datetime"
    },
    "timeDone": {
      "type": "string"
    }
  }
}
